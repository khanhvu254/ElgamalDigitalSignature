<script>
    function resetKey() {
        fetch('resetkey', { method: 'POST' }).then(() => location.reload());
    }

    function clearAll() {
        fetch('clearall', { method: 'POST' }).then(() => location.reload());
    }

    function downloadSignature() {
        const jsonData = `${requestScope.signatureJson}`;
        const base64Only = "${requestScope.signatureBase64}";
        const filename = document.getElementById('filename').value.trim() || 'chuky_elgamal';
        const ext = document.getElementById('fileext').value;
        const fullName = filename + ext;

        let content = jsonData;
        let mime = 'application/json';

        if (ext === '.txt' || ext === '.sig') {
            content = base64Only.replace(':', '\n'); // r và s trên 2 dòng cho dễ đọc
            mime = 'text/plain';
        }

        const blob = new Blob([content], { type: mime });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = fullName;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
