<script>
    function updatePreview() {
        const name = document.getElementById('filename').value.trim() || 'Chữ_ký_ElGamal';
        const ext = document.getElementById('fileext').value;
        document.getElementById('previewName').textContent = name + ext;
    }

    function downloadSignature() {
        const raw = "${requestScope.signatureBase64}";
        const message = "${requestScope.messageContent}" || "Không có nội dung";
        if (!raw || raw === 'null') {
            alert("Chưa có chữ ký để lưu!");
            return;
        }

        const baseName = document.getElementById('filename').value.trim() || 'Chữ_ký_ElGamal';
        const ext = document.getElementById('fileext').value;
        const fullName = baseName + ext;

        const [r, s] = raw.split(':');

        let content = '';
        let mime = 'text/plain';

        switch (ext) {
            case '.sig':
            case '.txt':
                content = raw;
                break;

            case '.json':
                mime = 'application/json';
                content = JSON.stringify({
                    algorithm: "ElGamal",
                    r: r,
                    s: s,
                    signed_at: new Date().toISOString(),
                    message_preview: message.substring(0, 100) + "..."
                }, null, 4);
                break;

            case '.pem':
                const lines = raw.match(/.{1,64}/g) || [raw];
                content = "-----BEGIN ELGAMAL SIGNATURE-----\n" + lines.join('\n') + "\n-----END ELGAMAL SIGNATURE-----";
                break;

            case '.docx':
                // Tạo file Word đẹp như văn bản chính thức
                const htmlContent = `
                <html xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:w="urn:schemas-microsoft-com:office:word" xmlns="http://www.w3.org/TR/REC-html40">
                <head><meta charset="utf-8"><title>Chữ ký số ElGamal</title></head>
                <body style="font-family: Times New Roman; font-size: 14pt; line-height: 1.6; margin: 50px;">
                    <h1 style="text-align: center; color: #1b5e20;">CHỮ KÝ SỐ ELGAMAL</h1>
                    <hr style="border: 2px solid #4caf50;">
                    <p><strong>Thời gian ký:</strong> ${new Date().toLocaleString('vi-VN')}</p>
                    <p><strong>Nội dung đã ký:</strong></p>
                    <div style="background:#f5f5f5; padding:15px; border-left:5px solid #4caf50; margin:15px 0;">
                        ${message.replace(/\n/g, '<br>')}
                    </div>
                    <p><strong>Chữ ký (r):</strong></p>
                    <div style="background:#e8f5e8; padding:10px; font-family: Consolas; word-break: break-all;">
                        ${r}
                    </div>
                    <p><strong>Chữ ký (s):</strong></p>
                    <div style="background:#e8f5e8; padding:10px; font-family: Consolas; word-break: break-all;">
                        ${s}
                    </div>
                    <p style="text-align:center; margin-top:60px; color:#666;">
                        <em>Tạo bởi Hệ thống Chữ ký số ElGamal - Đồ án tốt nghiệp</em>
                    </p>
                </body>
                </html>`;

                // Chuyển HTML thành Blob .docx (c
                const base64Docx = btoa(unescape(encodeURIComponent(htmlContent)));
                const docxHeader = "UEsDBBQABgAIAAAAIQ";
                const blob = base64ToBlob(docxHeader + base64Docx, 'application/vnd.openxmlformats-officedocument.wordprocessingml.document');
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = fullName;
                a.click();
                URL.revokeObjectURL(url);
                return; // Dừng lại vì đã xử lý .docx
        }

        // Các định dạng khác
        const blob = new Blob([content], { type: mime + ';charset=utf-8' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = fullName;
        a.click();
        URL.revokeObjectURL(url);
    }

    // Hàm hỗ trợ chuyển Base64 → Blob cho .docx
    function base64ToBlob(base64, type = "application/octet-stream") {
        const binaryString = atob(base64);
        const bytes = new Uint8Array(binaryString.length);
        for (let i = 0; i < binaryString.length; i++) {
            bytes[i] = binaryString.charCodeAt(i);
        }
        return new Blob([bytes], { type });
    }

    // Cập nhật preview khi load
    window.onload = updatePreview;

    function resetKey() {
        if(confirm("Xóa khóa hiện tại?")) {
            fetch('resetkey', { method: 'POST' }).then(() => location.reload());
        }
    }

    function clearAll() {
        if(confirm("Xóa toàn bộ lịch sử?")) {
            fetch('clearall', { method: 'POST' }).then(() => location.reload());
        }
    }

    function copyText(text) {
        navigator.clipboard.writeText(text).then(() => {
            alert("Đã sao chép!");
        }).catch(() => {
            prompt("Sao chép thủ công:", text);
        });
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
