<script>
    // Xác minh từ file
    document.getElementById('verifyFileForm').onsubmit = async (e) => {
        e.preventDefault();
        const formData = new FormData();
        formData.append('messageFile', document.getElementById('messageFile').files[0]);
        formData.append('signatureFile', document.getElementById('signatureFile').files[0]);

        const res = await fetch('verify', { method: 'POST', body: formData });
        const result = await res.text();
        showResult(result.includes('true'));
    };

    // Xác minh thủ công
    document.getElementById('verifyManualForm').onsubmit = async (e) => {
        e.preventDefault();
        const formData = new FormData();
        formData.append('r', document.getElementById('rInput').value);
        formData.append('s', document.getElementById('sInput').value);
        formData.append('message', document.getElementById('messageInput').value);

        const res = await fetch('verify', { method: 'POST', body: formData });
        const result = await res.text();
        showResult(result.includes('true'));
    };

    // Hiển thị kết quả đẹp
    function showResult(isValid) {
        const el = document.getElementById('verifyResult');
        el.className = 'verify-result show ' + (isValid ? 'alert-success' : 'alert-danger');
        el.innerHTML = isValid 
            ? 'CHỮ KÝ HỢP LỆ'
            : 'CHỮ KÝ KHÔNG HỢP LỆ';
    }

    // Các hàm cũ
    function resetKey() { if(confirm("Xóa khóa?")) fetch('resetkey', {method:'POST'}).then(()=>location.reload()); }
    function clearAll() { if(confirm("Xóa tất cả?")) fetch('clearall', {method:'POST'}).then(()=>location.reload()); }
    function copyText(text) { navigator.clipboard.writeText(text).then(()=>alert("Đã sao chép!")); }
    function downloadSignature() {
        const text = "${requestScope.signatureBase64}";
        if (!text) return alert("Chưa có chữ ký!");
        const filename = (document.getElementById('filename').value || 'chuky') + document.getElementById('fileext').value;
        const blob = new Blob([text], {type: 'text/plain'});
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a'); a.href = url; a.download = filename; a.click();
        URL.revokeObjectURL(url);
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
