<script>
    function resetKey() {
        fetch('resetkey', { method: 'POST' }).then(() => location.reload());
    }

    function clearAll() {
        fetch('clearall', { method: 'POST' }).then(() => location.reload());
    }

    function copyText(text) {
        navigator.clipboard.writeText(text).then(() => {
            alert("Đã sao chép!");
        });
    }

    function downloadSignature() {
        const text = "${requestScope.signature}";
        const filename = document.getElementById('filename').value.trim() || 'chuky_elgamal';
        const ext = document.getElementById('fileext').value;
        const fullName = filename + ext;

        const blob = new Blob([text], { type: 'text/plain' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = fullName;
        a.click();
        URL.revokeObjectURL(url);
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
