<script>
    // Tạo k ngẫu nhiên hợp lệ
    function generateRandomK() {
        const qStr = "${sessionScope.keyPair.q}";
        if (!qStr) {
            alert("Chưa tạo khóa!");
            return;
        }
        const q = BigInt(qStr);
        const phi = q - 1n;
        let k;
        do {
            k = 1n + BigInt(Math.floor(Math.random() * Number(q - 2n)));
            if (gcd(k, phi) === 1n) {
                document.getElementById('kInput').value = k.toString();
                alert("Đã tạo k hợp lệ: " + k);
                return;
            }
        } while (true);
    }

    function gcd(a, b) {
        while (b !== 0n) {
            [a, b] = [b, a % b];
        }
        return a;
    }

    // Xác minh từ file
    document.getElementById('verifyFileForm').onsubmit = async (e) => {
        e.preventDefault();
        const formData = new FormData();
        formData.append('messageFile', document.getElementById('messageFile').files[0]);
        formData.append('signatureFile', document.getElementById('signatureFile').files[0]);
        const res = await fetch('verify', { method: 'POST', body: formData });
        const html = await res.text();
        const isValid = html.includes('valid">true') || html.includes('CHỮ KÝ HỢP LỆ');
        showResult(isValid);
    };

    // Xác minh thủ công
    document.getElementById('verifyManualForm').onsubmit = async (e) => {
        e.preventDefault();
        const formData = new FormData();
        formData.append('r', document.getElementById('rInput').value.trim());
        formData.append('s', document.getElementById('sInput').value.trim());
        formData.append('message', document.getElementById('messageInput').value);
        const res = await fetch('verify', { method: 'POST', body: formData });
        const html = await res.text();
        const isValid = html.includes('valid">true') || html.includes('CHỮ KÝ HỢP LỆ');
        showResult(isValid);
    };

    function showResult(isValid) {
        const el = document.getElementById('verifyResult');
        el.className = 'verify-result show ' + (isValid ? 'alert-success' : 'alert-danger');
        el.innerHTML = isValid ? 'CHỮ KÝ HỢP LỆ' : 'CHỮ KÝ KHÔNG HỢP LỆ HOẶC BỊ GIẢ MẠO!';
    }

    function resetKey() { if(confirm("Xóa khóa hiện tại?")) fetch('resetkey', {method:'POST'}).then(()=>location.reload()); }
    function clearAll() { if(confirm("Xóa toàn bộ dữ liệu?")) fetch('clearall', {method:'POST'}).then(()=>location.reload()); }
    function copyText(text) { navigator.clipboard.writeText(text).then(()=>alert("Đã sao chép!")); }

    function downloadSignature() {
        const text = "${requestScope.signatureText}";
        if (!text) return alert("Chưa có chữ ký!");
        const blob = new Blob([text], {type: 'text/plain'});
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = "chuky_elgamal.txt";
        a.click();
        URL.revokeObjectURL(url);
    }
</script>

