<script>
    function resetKey() { fetch('resetkey', { method: 'POST' }).then(() => location.reload()); }
    function clearAll() { fetch('clearall', { method: 'POST' }).then(() => location.reload()); }

    // TẢI CHỮ KÝ VỀ MÁY
    function downloadSignature() {
        const signature = `${requestScope.signature}`.trim();
        const filename = document.getElementById('filename').value.trim() || 'chuky';
        const ext = document.getElementById('fileext').value;
        const fullname = filename + ext;

        let content = signature;
        if (ext === '.json') {
            content = JSON.stringify({
                algorithm: "ElGamal",
                signature: signature,
                timestamp: new Date().toISOString()
            }, null, 2);
        }

        const blob = new Blob([content], { type: 'text/plain' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = fullname;
        a.click();
        URL.revokeObjectURL(url);
    }
</script>

