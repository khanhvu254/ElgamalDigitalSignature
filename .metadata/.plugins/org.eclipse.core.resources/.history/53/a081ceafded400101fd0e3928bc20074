    <script>
        function readFile(input, targetId) {
            let file = input.files[0];
            if (!file) return;
            
            let reader = new FileReader();
            reader.onload = function() {
                document.getElementById(targetId).value = reader.result;
            };
            reader.readAsText(file);
        }
    </script>
