package controller;

import model.*;
import javax.servlet.ServletException;
import javax.servlet.annotation.MultipartConfig;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;
import java.io.IOException;
import java.math.BigInteger;
import java.nio.charset.StandardCharsets;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;

@WebServlet("/sign")
@MultipartConfig
public class SignServlet extends HttpServlet {

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        HttpSession session = request.getSession();
        ElgamalKey keyPair = (ElgamalKey) session.getAttribute("keyPair");

        if (keyPair == null || !keyPair.hasPrivateKey()) {
            request.setAttribute("error", "Vui lòng tạo khóa trước khi ký!");
            request.getRequestDispatcher("index.jsp").forward(request, response);
            return;
        }

        // Đọc thông điệp
        String message = request.getParameter("message");
        Part filePart = request.getPart("file");
        if ((message == null || message.trim().isEmpty()) && (filePart == null || filePart.getSize() == 0)) {
            request.setAttribute("error", "Vui lòng nhập nội dung hoặc chọn file!");
            request.getRequestDispatcher("index.jsp").forward(request, response);
            return;
        }
        if ((message == null || message.trim().isEmpty()) && filePart != null && filePart.getSize() > 0) {
            message = new String(filePart.getInputStream().readAllBytes(), StandardCharsets.UTF_8);
        }

        // Lấy k từ người dùng (nếu có)
        String kStr = request.getParameter("customK");
        BigInteger customK = null;
        if (kStr != null && !kStr.trim().isEmpty()) {
            try {
                customK = new BigInteger(kStr.trim());
                if (customK.compareTo(BigInteger.ONE) <= 0) {
                    request.setAttribute("error", "k phải lớn hơn 1!");
                    request.getRequestDispatcher("index.jsp").forward(request, response);
                    return;
                }
            } catch (NumberFormatException e) {
                request.setAttribute("error", "k phải là số nguyên hợp lệ!");
                request.getRequestDispatcher("index.jsp").forward(request, response);
                return;
            }
        }

        try {
            ElgamalModel.FullSignature fullSig = ElgamalModel.signWithK(message, keyPair, customK);

            request.setAttribute("rValue", fullSig.getR().toString());
            request.setAttribute("sValue", fullSig.getS().toString());
            request.setAttribute("kValue", fullSig.getK().toString());
            request.setAttribute("signatureText", fullSig.toString());
            request.setAttribute("messageContent", message);

            // Lưu lịch sử
            List<String> history = (List<String>) session.getAttribute("history");
            if (history == null) {
                history = new ArrayList<>();
                session.setAttribute("history", history);
            }
            String shortMsg = message.length() > 40 ? message.substring(0, 40) + "..." : message;
            history.add(0, "[" + new Date() + "] Ký (k=" + fullSig.getK() + "): " + shortMsg);

        } catch (Exception e) {
            request.setAttribute("error", "Lỗi khi ký: " + e.getMessage());
        }

        request.getRequestDispatcher("index.jsp").forward(request, response);
    }
}