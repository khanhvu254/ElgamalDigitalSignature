<script>
    function generateRandomK() {
        const qStr = "${sessionScope.keyPair.q}";
        if (!qStr) return;
        const q = BigInt(qStr);
        const phi = q - 1n;
        let k;
        do {
            k = 1n + BigInt(Math.floor(Math.random() * Number(q - 2n)));
            if (gcd(k, phi) === 1n) {
                document.getElementById('kInput').value = k.toString();
                return;
            }
        } while (true);
    }

    function gcd(a, b) {
        while (b !== 0n) [a, b] = [b, a % b];
        return a;
    }

    document.getElementById('verifyManualForm')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const fd = new FormData();
        fd.append('r', document.getElementById('rInput').value.trim());
        fd.append('s', document.getElementById('sInput').value.trim());
        fd.append('message', document.getElementById('messageInput').value);

        const res = await fetch('verify', { method: 'POST', body: fd });
        const html = await res.text();
        const isValid = html.includes('valid">true') || html.includes('HỢP LỆ');

        const el = document.getElementById('verifyResult');
        el.className = 'verify-result show ' + (isValid ? 'alert-success' : 'alert-danger');
        el.innerHTML = isValid ? 'CHỮ KÝ HỢP LỆ' : 'CHỮ KÝ KHÔNG HỢP LỆ';
    });

    function resetKey() {
        if(confirm("Xóa khóa hiện tại?")) {
            fetch('resetkey', {method:'POST'}).then(() => location.reload());
        }
    }

    function clearAll() {
        if(confirm("Xóa toàn bộ lịch sử?")) {
            fetch('clearall', {method:'POST'}).then(() => location.reload());
        }
    }

    function copyText(text) {
        navigator.clipboard.writeText(text);
    }

    function downloadSignature() {
        const text = "${requestScope.signatureText}";
        if (!text) return;
        const blob = new Blob([text], {type: 'text/plain'});
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url; a.download = "chuky_elgamal.txt"; a.click();
        URL.revokeObjectURL(url);
    }
</script>

